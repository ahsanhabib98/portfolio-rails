<h1>Service Items</h1>

<%= link_to "Create New Item", new_service_url %>

<% @service_items.each do |service_item| %>
  <p><%= link_to service_item.title, service_path(service_item.id) %></p>
  <p><%= service_item.subtitle %></p>
  <p><%= service_item.body %></p>
  <%= image_tag service_item.thumb_image if !service_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_service_path(service_item.id) %>
  <%= link_to 'Delete Service Item', service_path(service_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
